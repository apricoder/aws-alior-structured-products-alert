{
  "name": "aws-alior-structured-products-alert",
  "version": "1.0.0",
  "description": "Serverless aws-nodejs-typescript template",
  "main": "serverless.ts",
  "scripts": {
    "invoke:local": "sls invoke local --function snapshotProducts --path src/functions/snapshot-products/mock.json",
    "lint": "eslint ./src --ext .ts",
    "test:ci": "jest --ci",
    "test:coverage": "jest --coverage",
    "test:badges": "npm run test:coverage && jest-coverage-badges --output ./badges"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "dependencies": {
    "@middy/core": "^3.4.0",
    "@middy/http-json-body-parser": "^3.4.0",
    "date-fns": "^2.30.0",
    "mongodb": "^6.1.0",
    "node-fetch": "^3.3.2",
    "node-html-parser": "^6.1.10",
    "node-telegram-bot-api": "^0.63.0"
  },
  "devDependencies": {
    "@serverless/typescript": "^3.0.0",
    "@types/aws-lambda": "^8.10.71",
    "@types/jest": "^29.5.5",
    "@types/node": "^14.14.25",
    "@types/node-telegram-bot-api": "^0.61.7",
    "esbuild": "^0.14.11",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-coverage-badges": "^1.1.2",
    "json-schema-to-ts": "^1.5.0",
    "prettier": "^3.0.3",
    "serverless": "^3.0.0",
    "serverless-add-api-key": "^4.2.1",
    "serverless-esbuild": "^1.23.3",
    "serverless-offline": "^12.0.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "author": "The serverless webpack authors (https://github.com/elastic-coders/serverless-webpack)",
  "license": "MIT",
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "coverageReporters": [
      "json-summary"
    ]
  }
}
